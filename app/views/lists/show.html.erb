<h1><%= @list.name %></h1>
<%= link_to "New Bookmark", new_list_bookmark_path(@list), class: "btn btn-primary" %>

<% @list.movies.each do |movie| %>
  <div class="card" style="width: 18rem;">
    <%= image_tag movie.poster_url, alt: "", width: 200, class: "card-img-top" %>
    <div class="card-body">
      <h5 class="card-title"><%= movie.title %></h5>
      <p class="card-text"><strong>Overview: </strong><%= movie.overview %></p>

      <% bookmark = Bookmark.find_by(movie_id: movie.id) %>
      <p class="card-text"><strong>Comment: </strong><%= bookmark.comment %></p>
      
      <a href="#" class="btn btn-primary">Delete </a>
    </div>
  </div>
<% end %>
